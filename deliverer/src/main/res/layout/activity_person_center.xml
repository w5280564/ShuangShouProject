<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/colorLine" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imgPersonal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    fresco:placeholderImage="@drawable/icon_default_person"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_PersonalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgPersonal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPersonalSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_PersonalName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#585858"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:paddingBottom="25dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearPersonalMyShuangShou"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp">

                <ImageView
                    android:id="@+id/imgPersonalMyShuangShou"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person_center_myss" />

                <TextView
                    android:id="@+id/tvPersonalMyShuangShou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="我的双收"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/colorLine" />

            <LinearLayout
                android:id="@+id/linearPersonalCountDetail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp">

                <ImageView
                    android:id="@+id/imgPersonalCountDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person_center_count_detail" />

                <TextView
                    android:id="@+id/tvPersonalCountDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="17dp"
                    android:text="积分详情"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/colorLine" />

            <LinearLayout
                android:id="@+id/linearPersonalInfor"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp">

                <ImageView
                    android:id="@+id/imgPersonalInfor"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person_center_infor" />

                <TextView
                    android:id="@+id/tvPersonalInfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="17dp"
                    android:text="消息通知"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/colorLine" />

            <LinearLayout
                android:id="@+id/linearPersonalset"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp">

                <ImageView
                    android:id="@+id/imgPersonalSet"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person_center_set" />

                <TextView
                    android:id="@+id/tvPersonalSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="17dp"
                    android:text="@string/personal_set"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/colorLine" />

            <LinearLayout
                android:id="@+id/linearPersonalAddress"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgPersonalAddress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person_center_recycle_address" />

                <TextView
                    android:id="@+id/tvPersonalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="17dp"
                    android:text="回收地址"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/colorLine"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/linearPersonalCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp">

                <ImageView
                    android:id="@+id/imgPersonalPhone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person_center_customer" />

                <TextView
                    android:id="@+id/tvPersonalCustomerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="17dp"
                    android:text="客服电话"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/colorLine"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/linearPersonalComments"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgPersonalComments"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/person_center_comments" />

                <TextView
                    android:id="@+id/tvPersonalComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="17dp"
                    android:text="评论系统"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>