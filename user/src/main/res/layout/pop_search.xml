<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|top|right"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearPopSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linearPopSearchBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPopSearchOrders"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="待接单"
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorLine" />

            <TextView
                android:id="@+id/tvPopSearchOrdered"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="已接单"
                android:textColor="@color/personDataLeft"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorLine" />

            <TextView
                android:id="@+id/tvPopSearchRecycled"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="已回收"
                android:textColor="@color/personDataLeft"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorLine" />

            <TextView
                android:id="@+id/tvPopSearchFinished"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/personDataLeft"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
