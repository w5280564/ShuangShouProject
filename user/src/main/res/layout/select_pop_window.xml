<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/popbackimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/popdown_btn"
        android:text="取消"
        android:textColor="#2f6a9d"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/cancelline"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_above="@id/cancelbtn"
        android:layout_centerHorizontal="true"
        android:background="#c6c6c6"
        android:scaleType="fitXY" />

    <ListView
        android:id="@+id/selectlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cancelline"
        android:layout_centerHorizontal="true"
        android:cacheColorHint="#00000000"
        android:divider="#c6c6c6"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbars="none"></ListView>
</RelativeLayout>