<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lyz.shuangshoudeliverer.com.lyz.shuangshouproject.ui.activity.OrderDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvContactsRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="联系人：已回收"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_order_detail" />

        <TextView
            android:id="@+id/tvPhoneRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="联系电话：已回收"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_order_detail" />

        <TextView
            android:id="@+id/tvAddressRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="回收地址：已回收"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/sp_order_detail" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvAddressFlagRecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前默认地址"
                android:textColor="@color/blue"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvEditAddressRecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_detail_recycle"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:text="编辑地址"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>