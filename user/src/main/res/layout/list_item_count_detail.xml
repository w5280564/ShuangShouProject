<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lyz.shuangshoudeliverer.com.lyz.shuangshouproject.ui.activity.OrderDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="17dp"
        android:paddingBottom="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+6800"
                android:textColor="#DC3232"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvTimeCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017.07.13 14:45"
                android:layout_centerVertical="true"
                android:textColor="@color/personDataLeft"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvContentCountDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="2号纸箱*3   2号纸箱*3   2号纸箱*3   2号纸箱*3"
            android:layout_marginTop="10dp"
            android:textColor="@color/personDataLeft"
            android:textSize="@dimen/sp_order_detail" />

    </LinearLayout>
</RelativeLayout>